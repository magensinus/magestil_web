// About

.main.col-960-1-1
  .main-box.col-960-1-1
    - if object.title.presence
      .main-item.col-960-1-1
        %h1= object.title
    - if object.description.presence
      .main-item.col-960-1-1
        .trix
          = safe_join([object.description.html_safe])
%hr.separator.medium
- if @about_image_assets.presence
  = render "about_image_assets"
%hr.separator.medium
.main.col-960-1-1
  .main-box.col-960-1-1
    - if object.body.presence
      .main-item.col-960-1-1
        .trix
          = safe_join([object.body.html_safe])
    - if object.document_box.presence
      .main-item.col-960-1-1
        = link_to object.document_box_url.to_s, class: "link small green", target: "_blank" do
          - if object.document_caption.presence
            = object.document_caption
          - else
            = t("document")
- if @about_assets.presence
  = render "about_assets"
