// Menu aside

.menu-aside.col-240-1-1.left
  .menu-aside-box.col-240-1-1
    .menu-aside-wrapper.col-240-1-1{ class: "#{ yield :theme_aside_class if content_for?(:theme_aside_class)}" }
      - objects.each do |object|
        .menu-aside-item.col-240-1-1
          = link_to object.title, course_section_path(parent, object), class: "link small"
      - if parent.image_box_magestil.presence
        .menu-aside-item.col-240-1-1
          = link_to "Componentes de Formação", "#{parent.image_box_magestil_url}", "data-featherlight" => "image", class: "link small gallery"
      - if parent.tutors.presence
        .menu-aside-item.col-240-1-1
          = link_to "Coordenadores & Professores", course_tutors_path(parent), class: "link small"
      - if parent.document_box_magestil.presence
        .menu-aside-item.col-240-1-1
          = link_to "Descarregar PDF", parent.document_box_magestil.url.to_s, class: "link small", target: "_blank"
      .menu-aside-item.col-240-1-1
        = link_to "Pré-inscrições", category_enrollments_path(grandparent), class: "link small"
