// Section

.main.col-960-1-1
  .main-box.col-960-1-1
    .main-item.col-960-1-1
      %h1.large.left= parent.title
      // %h1.large.left{ style: "color: #{parent.font_color_one}" }
        = parent.title

%hr.separator.medium

.main.col-720-1-1
  .main-box.col-720-1-1
    .main-item.col-720-1-1
      %h3.left= object.title
      // %h3{ style: "color: #{parent.font_color_one}" }= object.title
    - object.section_assets.order(position: :asc).each do |asset|
      .main-item.col-720-1-1
        - if asset.text     == true
          .trix
            .text
            // .text{ style: "color: #{parent.font_color_one}" }
              = safe_join([asset.text_box.html_safe])
        - if asset.image    == true
          .trix
            .image
              = image_tag asset.image_box_url.to_s, class: "left"
        - if asset.document == true
          .trix
            .document
              = link_to "Documento", asset.document_box.url.to_s, class: "button small wide left", target: "_blank"
              %p= asset.document_caption if asset.document_caption.presence
        - if asset.video    == true
          .trix
            .video
              %iframe#ytplayer{ allowfullscreen: "", frameborder: "0", height: "396", src: "https://www.youtube.com/embed/#{asset.video_box}", type: "text/html", width: "704" }
