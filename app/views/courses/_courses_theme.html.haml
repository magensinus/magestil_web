// Courses theme

- if object.cover_box_magestil.presence
  :coffee
    bindWidths = ->
      $windowSize = $(this).width()
      $(".set-theme-#{object.slug}").css
        "background-color": "#{object.gradient_color_fallback}"
        "background-image": "url('#{object.cover_box_magestil_url}')"

      # Breadcrumbs Links
      $(".set-theme-#{object.slug} .breadcrumbs .link").css
        "color": "white"
      $(".set-theme-#{object.slug} .breadcrumbs .link").hover(->
        $(this).css
          "color": "#{object.hover_color_two}"
      ).mouseout ->
        $(this).css
          "color": "white"

      # Billboard Button
      $(".set-theme-#{object.slug} .billboard .button").css
        "color": "white",
        "background-color": "#{object.hover_color_one}"
      $(".set-theme-#{object.slug} .billboard .button").hover(->
        $(this).css
          "color": "#{object.font_color_one}",
          "background-color": "#{object.hover_color_two}"
      ).mouseout ->
        $(this).css
          "color": "white",
          "background-color": "#{object.hover_color_one}"

    $(document).on "turbolinks:load", ->
      bindWidths()
      Turbolinks.clearCache()
      return
    $(window).resize ->
      bindWidths()
      Turbolinks.clearCache()
      return
